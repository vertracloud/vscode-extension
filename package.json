{
  "name": "vertra-cloud",
  "displayName": "Vertra Cloud",
  "description": "Extensão VSCode para gerenciar apps e databases da Vertra Cloud",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/vertracloud.png",
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vertraCloud",
          "title": "Vertra Cloud",
          "icon": "resources/vertra-icon.svg"
        }
      ]
    },
    "views": {
      "vertraCloud": [
        {
          "id": "vertraCloudApps",
          "name": "Aplicações",
          "icon": "resources/app-icon.svg"
        },
        {
          "id": "vertraCloudDBs",
          "name": "Bancos de Dados",
          "icon": "resources/db-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "vertraCloud.setApiKey",
        "title": "Vertra Cloud: Cadastrar ou Atualizar API Key"
      },
      {
        "command": "vertraCloud.clearApiKey",
        "title": "Vertra Cloud: Remover API Key"
      },
      {
        "command": "vertraCloud.project.viewLogs",
        "title": "Ver Logs",
        "category": "Projeto",
        "icon": "$(terminal)"
      },
      {
        "command": "vertraCloud.project.startApp",
        "title": "Iniciar",
        "category": "Projeto"
      },
      {
        "command": "vertraCloud.project.stopApp",
        "title": "Parar",
        "category": "Projeto"
      },
      {
        "command": "vertraCloud.project.restartApp",
        "title": "Reiniciar",
        "category": "Projeto"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "vertraCloud.project.viewLogs",
          "when": "viewItem == appOnline || viewItem == appOffline",
          "group": "inline"
        },
        {
          "command": "vertraCloud.project.stopApp",
          "when": "viewItem == appOnline",
          "group": "1_modification"
        },
        {
          "command": "vertraCloud.project.startApp",
          "when": "viewItem == appOffline",
          "group": "1_modification"
        },
        {
          "command": "vertraCloud.project.restartApp",
          "when": "viewItem == appOnline",
          "group": "1_modification"
        }
      ]
    }
  },
  "publisher": "VertraCloud",
  "repository": {
    "type": "git",
    "url": "https://github.com/vertracloud/vscode-extension"
  },
  "keywords": [
    "vertra",
    "cloud",
    "vertracloud",
    "vscode",
    "extension"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@vertracloud/api-types": "^0.0.16",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "typescript": "^5.0.0"
  }
}
